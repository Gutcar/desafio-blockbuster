<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre", class: "form-label"%>
    <%= form.text_field :name, class: "form-control mb-3"  %>
  </div>

  <% if controller_name == 'movies' && action_name == 'edit' %>
    <!-- Código que se mostrara solo en la página de edición de películas -->
    <div>
      <%= form.label :client_id, "Cliente", class: "form-label"%>
      <%= form.select :client_id, options_for_select(@clients), {}, class: "form-select mb-3" %>
    </div>
  <% end %>
  
  <div>
    <%= form.submit "Guardar", class: "btn btn-warning"  %>
  </div>
<% end %>
