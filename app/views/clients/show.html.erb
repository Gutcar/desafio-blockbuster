<p style="color: green" class="my-5"><%= notice %></p>

<div class="row">
  <div class="col">
    <%= render @client %>

    <div class="d-flex justify-content-start mt-4 mb-5">
      <%= link_to "Editar", edit_client_path(@client), class: "btn btn-warning me-2" %>
      <%= button_to "Eliminar", @client, method: :delete, class: "btn btn-danger me-2" %>
    </div>

    <div>
      <%= link_to "Volver a clientes", clients_path, class: "btn btn-outline-warning" %>
    </div>
  </div>
</div>



